@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
        <li class="nav-item">
            <a class="nav-link" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">
                @ViewBag.UserProfile.Nickname <i class="fas fa-sign-out-alt"></i>
            </a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">
                <i class="fas fa-sign-in-alt"></i> Sign in
            </a>
        </li>
}
</ul>
